<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
</head>

<body>
  <header>
    <% if(loggedIn === true){ %>
    <%- include('../partials/header_nos') %>
    <% } else{ %>
    <%- include('../partials/header_nol') %>
    <% } %>
  </header>

  <div class="p-10">
    <h1 class=" text-4xl"><%= subCategory %></h1>
    <p class=" font-light"><%= category %></p>

    <section class="text-gray-600 body-font">
      <div class="container px-5 py-24 mx-auto">
        <div class="flex flex-wrap justify-evenly -m-4">

          <% gigs.forEach ( gig => { %>
          <div class="lg:w-1/4 md:w-1/3 p-4 w-2/3 border-2 m-2 rounded-lg">
            <% if (loggedIn) { %>
            <a class="block relative h-52 rounded overflow-hidden" href="/<%- category %>/<%- subCategory %>/<%= gig.name %>">
              <img alt="ecommerce" class="object-cover object-center w-full h-full block" src="\<%= gig.imageUrl %>">
            </a>
            <% } else { %>
            <a class="block relative h-52 rounded overflow-hidden" href="/signup">
              <img alt="ecommerce" class="object-cover object-center w-full h-full block" src="\<%= gig.imageUrl %>">
            </a>
            <% } %>
            <div class="mt-4">
              <h3 class="text-gray-500 text-xs tracking-widest title-font mb-1"><%= gig.subCategory %></h3>
              <h2 class="text-gray-900 title-font text-lg font-medium"><%= gig.name %></h2>
              <hr>
              <p class="mt-1">$<%= gig.price %></p>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
  </div>
  </section>
  </div>

  <footer>
    <%- include('../partials/footer') %>
  </footer>
</body>

</html>