    <a href="/admin-dashboard" class="pr-6 text-purple-700">Admin</a>
    <% } %>
    <p class="m-1 hidden sm:block">Search</p>
    <form action="/search" method="post">
      <input type="text" class="hidden sm:block text-[var(--color2)] search-inp rounded-lg m-4 p-1" name="query" placeholder="search here">
